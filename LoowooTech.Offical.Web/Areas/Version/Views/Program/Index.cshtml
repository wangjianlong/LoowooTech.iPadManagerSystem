
@{
    ViewBag.Title = "程序列表";
    Layout = "~/Areas/Version/Views/Shared/_Layout.cshtml";
    List<Program> list = ViewBag.List;
    ProgramParameter parameter = ViewBag.Parameter;
}

@section Description{
    程序列表
    }

@section ButtonHead{
    <div class="title-action">

    </div>
    }

<div class="row">
    <div class="col-xs-3">
        <div class="ibox float-e-margins">
            <div class="ibox-content mailbox-content">
                <h2>查询设置</h2>
                <form method="get">
                    <div class="form-group">
                        <label class="control-label"></label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>查询</button>
                        <button type="button" class="btn btn-white" onclick="history.back()"><i class="fa fa-arrow-left"></i>返回</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-xs-9 animated fadeInRight">
        <div class="ibox">
            <div class="ibox-content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>名称</th>
                            <th>创建者</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in list)
                        {
                            <tr>
                                <td>@(item.ID)</td>
                                <td>
                                    <a href="/Version/Program/Detail?id=@(item.ID)">@(item.Name)</a>
                                </td>
                                <td>@(item.User.Name)</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @{
                    Html.RenderPartial("_pagination", parameter.Page as object);
                }
            </div>
        </div>
    </div>
</div>

