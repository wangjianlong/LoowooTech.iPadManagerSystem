@{ 
    Layout = null;
    ProjectType projectType = ViewBag.ProjectType;
    ProjectType Parent = ViewBag.Parent;
}

<script>
    $(function () {
        $("#form-projectType").submit(function () {
            LWSubmit("#form-projectType");
            return false;
        });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <i class="fa @(projectType==null?"fa-plus-square":"fa-edit")  modal-icon"></i>
    <h4 class="modal-title">@string.Format("{0}项目类型", projectType == null ? "添加" : "编辑") </h4>
</div>

<form class="form-horizontal" method="post" id="form-projectType" action="/Admin/ProjectType/Save" Url="/Admin/ProjectType/Index">
    <div class="modal-body">
        @if (Parent != null)
        {
            <div class="form-group">
                <label class="control-label col-sm-3">上级项目类型：</label>
                <div class="col-sm-7">
                    <input type="hidden" name="ParentId" value="@(Parent.ID)" />
                    <input type="text" class="form-control" readonly value="@(Parent.Name)" />
                </div>
            </div>

        }else
        {
            if (projectType != null && projectType.ParentId.HasValue)
            {
                <input type="hidden" name="ParentId" value="@(projectType.ParentId.Value)" />
            }
        }
        <div class="form-group">
            <label class="control-label col-sm-3">类型名称：</label>
            <div class="col-sm-7">
                <input type="hidden" name="ID" value="@(projectType==null?0:projectType.ID)" />
                <input type="text" name="Name" class="form-control" placeholder="类型名称" required  value="@(projectType==null?"":projectType.Name)"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">备注：</label>
            <div class="col-sm-7">
                <textarea class="form-control" rows="3" name="Remark">@(projectType == null?"":projectType.Remark)</textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
        <button type="button" class="btn btn-white" data-dismiss="modal"><i class="fa fa-times"></i> 取消</button>
    </div>
</form>