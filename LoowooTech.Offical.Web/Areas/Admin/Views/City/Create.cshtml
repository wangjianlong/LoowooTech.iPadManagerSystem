@{ 
    Layout = null;

    LoowooTech.Models.Admin.City city = ViewBag.City;
    LoowooTech.Models.Admin.City parent = ViewBag.Parent;
 }

<script>
    $(function () {
        $("#form-city").submit(function () {
            LWSubmit("#form-city");
            return false;
        });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <i class="fa @(city==null?"fa-plus-square":"fa-edit")  modal-icon"></i>
    <h4 class="modal-title">@string.Format("{0}城市", city == null ? "添加" : "编辑") </h4>
</div>


<form class="form-horizontal" method="post" id="form-city" action="/Admin/City/Save" Url="/Admin/City/Index">
    <div class="modal-body">
        @if (parent != null)
        {
            <div class="form-group">
                <label class="control-label col-sm-3">上级行政名称：</label>
                <div class="col-sm-9">
                    <input type="hidden" name="ParentId" value="@(parent.ID)" />
                    <input type="text" name="" class="form-control" value="@(parent.Name)" readonly />
                </div>
            </div>
        }
        else
        {
            if (city != null)
            {
                <input type="hidden" name="ParentId" value="@(city.ParentId)" />
            }

        }

        <div class="form-group">
            <label class="control-label col-sm-3">名称：</label>
            <div class="col-sm-9">
                <input type="hidden" name="ID" value="@(city==null?0:city.ID)" />
            
                <input type="text" name="Name" class="form-control" placeholder="名称" required value="@(city==null?"":city.Name)" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">行政代码：</label>
            <div class="col-sm-9">
                <input type="text" name="Code" class="form-control" placeholder="行政代码" required value="@(city==null?"":city.Code)" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">备注：</label>
            <div class="col-sm-9">
                <textarea class="form-control" rows="3" name="Remark"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
        <button type="button" class="btn btn-white" data-dismiss="modal"><i class="fa fa-times"></i> 取消</button>
    </div>
</form>