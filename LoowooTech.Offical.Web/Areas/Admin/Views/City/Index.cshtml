
@{
    ViewBag.Title = "城市管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<City> tree = ViewBag.Tree;
}

@section Description{
    城市信息管理
    }

@section ButtonHead{
    <div class="title-action">
        <a href="/Admin/City/Create" class="btn btn-primary"data-toggle="modal" data-target="#Modal"><i class="fa fa-plus-square"></i>添加城市</a>
    </div>
    }


<div class="row">
    @foreach (var item in tree)
            {
        <div class="col-lg-6">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>@(item.Name)-@(item.Code)</h5>
                </div>
                <div class="ibox-content">
                    <div class="dd">
                        <ol class="dd-list">
                            <li class="dd-item">
                                <div class="dd-handle">
                                    @(item.Name)-@(item.Code)
                                    <div class="btn-group btn-group-xs pull-right">
                                        <a href="/Admin/City/Create?cityId=@(item.ID)" class="btn btn-primary" data-toggle="modal" data-target="#Modal"><i class="fa fa-plus-circle"></i>添加辖区</a>
                                        <a href="/Admin/City/Create?id=@(item.ID)" class="btn btn-success" data-toggle="modal" data-target="#Modal"><i class="fa fa-edit"></i>编辑</a>
                                        <a href="/Admin/City/Delete?id=@(item.ID)" class="btn btn-danger" name="Delete" Url="/Admin/City/Index"><i class="fa fa-times-circle"></i>删除</a>
                                    </div>
                                </div>
                                @if (item.Children != null)
                                {
                                    Html.RenderPartial("_showCity", item.Children as object);
                                }
                            </li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

