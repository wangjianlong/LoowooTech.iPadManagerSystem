
@model List<Traffic>


<div class="ibox">
    <div class="ibox-title">
        <h5>交通费详情</h5>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="col-sm-12">
                <dl class="dl-horizontal">
                    @foreach (var item in Model)
                    {
                        <dt>@(item.Vehicles.GetDescription()):</dt>
                        <dd>@(item.Description)</dd>
                    }
                </dl>
                <div class="hr-line-dashed"></div>
                <dl class="dl-horizontal">
                    <dt>合计金额：</dt>
                    <dd>&yen;@(Model.Where(e=>e.Vehicles!=Vehicles.InternetCar).Sum(e=>e.Cost))元</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

