
@{
    ViewBag.Title = "录入出差详情";
    Layout = "~/Areas/Expense/Views/Shared/_Layout.cshtml";
    Sheet sheet = ViewBag.Sheet;
}

@section Description{
    完善报销信息！出差详情
    }

<div class="row">
    <div class="ibox">
        <div class="ibox-title">
            <h5>报销基础信息</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-6">
                    <dl class="dl-horizontal">
                        <dt>报销人：</dt>
                        <dd>@(sheet.User.Name)</dd>
                        <dt>报销单位：</dt>
                        <dd>@(sheet.Company.Name)</dd>
                    </dl>
                </div>
                <div class="col-sm-6">
                    <dl class="dl-horizontal">
                        <dt>报销时间：</dt>
                        <dd>@(sheet.Time.ToLongDateString())</dd>
                        <dt>报销类型：</dt>
                        <dd><span class="label label-primary">@(sheet.SheetType.GetDescription())</span> </dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <dl class="dl-horizontal">
                        <dt>备注：</dt>
                        <dd>@(sheet.Remark)</dd>
                        <dt>相关项目：</dt>
                        <dd>
                            <a href="" class="">@(sheet.Project.Name)</a>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        
    </div>

    <div class="ibox">
        <div class="ibox-title">
            <h5>出差详情</h5>
        </div>
        <div class="ibox-content">
            <div class="row">
                <form class="form-horizontal" method="post" action="" id="form-evection" Url="">
                    <div class="col-sm-4 b-r">
                        <div class="form-group">
                            <label class="control-label col-sm-3">发票张数：</label>
                            <div class="col-sm-8">
                                <input type="number" name="" class="form-control" placeholder="发票张数" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">出差城市：</label>
                            <div class="col-sm-8">
                                <input type="text" name="City" class="form-control" placeholder="出差地点" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">住宿/房费：</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input type="text" name="Hotel" class="form-control" placeholder="住宿/房费" />
                                    <span class="input-group-addon">元</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">其他内容：</label>
                            <div class="col-sm-8">
                                <input type="text" name="Other" class="form-control" placeholder="其他花费内容" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">其他费用：</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input type="text" name="" class="form-control" placeholder="其他费用" />
                                    <span class="input-group-addon">元</span>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 b-r">
                        <div class="form-group">
                            <label class="control-label col-sm-3">出差人员：</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                               
                                    <input type="text" name="Persons" class="form-control" placeholder="出差人员" readonly />
                                    <div class="input-group-btn">
                                        <a href="/Expense/User/Select" action="/Expense/User/Select?" goal="UserId" class="btn btn-primary" data-toggle="modal" data-target="#Modal" name="Select"><i class="fa fa-mouse-pointer"></i>选择</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="Time">
                           
                        </div>
                   
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3">交通费：</label>
                            <div class="col-sm-8">

                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                       
                       
                       
                        
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-3">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3"></label>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



