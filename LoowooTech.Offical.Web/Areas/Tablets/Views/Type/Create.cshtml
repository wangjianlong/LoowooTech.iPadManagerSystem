@{ 
    Layout = null;
    TabletType type = ViewBag.Model;
}

<script>
    $(function () {
        $("#form-type").submit(function () {
            LWSubmit("#form-type");
            return false;
        });
    })
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">平板类型</h4>
</div>


<form class="form-horizontal" method="post" action="/Tablets/Type/Save" Url="/Tablets/Home/Index" id="form-type">
    <div class="modal-body">
        <input type="hidden" name="ID" value="@(type != null?type.ID:0)" />
        <input type="hidden" name="UserId" value="@(type!=null?type.UserId:Identity.UserId)" />
        <div class="form-group">
            <label class="control-label col-xs-3">类型名称：</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="Name" placeholder="类型名称" value="@(type!=null?type.Name:"")" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">生产厂商:</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="Company" placeholder="生产厂商" value="@(type!=null?type.Company:"")" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">发布年份：</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="Year" placeholder="发布年份" value="@(type!=null?type.Year:DateTime.Now.Year)" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">屏幕尺寸：</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="Size" placeholder="屏幕尺寸，单位：英寸" value="@(type!=null?type.Size:0)" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">颜色：</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="Color" placeholder="颜色，如深空灰" value="@(type!=null?type.Color:"")" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">网络方式：</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="InternetWay" placeholder="网络连接方式，如WIFI，WIFI+Cellular" value="@(type!=null?type.InternetWay:"")" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">容量：</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="Space" placeholder="空间容量" value="@(type!=null?type.Space:0)" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">容量单位：</label>
            <div class="col-xs-7">
                <input type="text" class="form-control" name="SpaceUnit" placeholder="容量单位" value="@(type != null?type.SpaceUnit:"GB")" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">备注：</label>
            <div class="col-xs-7">
                <textarea rows="3" class="form-control" name="Remark">@(type!=null?type.Remark:"")</textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i> 取消</button>
    </div>
</form>
