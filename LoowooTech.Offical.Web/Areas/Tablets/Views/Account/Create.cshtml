@{ 
    Layout = null;
    Account account = ViewBag.Model;
}

<script>
    $(function () {
        $(".datetime").datepicker({
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true
        });
        $("#form-account").submit(function () {
            LWSubmit("#form-account");
            return false;
        });
    })
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">账号信息</h4>
</div>


<form class="form-horizontal" method="post" action="/Tablets/Account/Save" Url="/Tablets/Home/Index" id="form-account">
    <div class="modal-body">
        <input type="hidden" name="ID" value="@(account != null?account.ID:0)" />
        <input type="hidden" name="UserId" value="@(account!=null?account.UserId:Identity.UserId)" />
        <div class="form-group">
            <label class="control-label col-xs-3">账号名称：</label>
            <div class="col-xs-7">
                <input type="text" name="Name" class="form-control" placeholder="账号名称" value="@(account!=null?account.Name:"")" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">密保手机：</label>
            <div class="col-xs-7">
                <input type="text" name="TelPhone" class="form-control" placeholder="密保手机"  value="@(account!=null?account.TelPhone:"")"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">注册时间：</label>
            <div class="col-xs-7">
                <input type="text" name="RegisterTime" class="form-control datetime" readonly placeholder="账号注册时间" value="@(account!=null?account.RegisterTime.ToString("yyyy-MM-dd"):"")"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">备注：</label>
            <div class="col-xs-7">
                <textarea class="form-control" rows="3" name="Remark">@(account!=null?account.Remark:"")</textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i> 取消</button>
    </div>
</form>
