
@{
    ViewBag.Title = "平板列表";
    Layout = "~/Areas/Tablets/Views/Shared/_Layout.cshtml";
    List<Tablet> list = ViewBag.List;
    TabletParameter parameter = ViewBag.Parameter;

    List<TabletType> types = ViewBag.Types;
    List<Account> accounts = ViewBag.Accounts;
    List<User> users = ViewBag.Users;
}

@section ButtonHead{
    <div class="title-action">
        <a href="/Tablets/Record/Create" class="btn btn-info btn-outline" data-toggle="modal" data-target="#Modal"><i class="fa fa-briefcase"></i>登记</a>
        <a href="/Tablets/Tablet/Create" class="btn btn-primary btn-outline"  data-toggle="modal" data-target="#Modal"><i class="fa fa-plus-square"></i>添加平板</a>
    </div>
    }

<div class="row">
    <div class="col-xs-3">
        <div class="ibox float-e-margins">
            <div class="ibox-content  mailbox-content">
                <h2>查询设置</h2>
                <form method="get" action="">
                    <div class="form-group">
                        <label class="control-label">序列号：</label>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button class="btn btn-primary">全部</button>
                            </div>
                            <input type="text" class="form-control" name="SerialNumber" />
                        </div>
                       
                    </div>
                    <div class="form-group">
                        <label class="control-label">平板类型：</label>
                        <select class="form-control" name="TypeId">
                            <option value="" @(parameter.TypeId.HasValue?"":"selected=selected")>全部</option>
                            @foreach(var item in types)
                            {
                                <option value="@(item.ID)" @(parameter.TypeId.HasValue&&parameter.TypeId.Value==item.ID?"selected=selected":"")>@(item.Title)</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">开发者账号：</label>
                        <select class="form-control" name="AccountId">
                            <option value="" @(parameter.AccountId.HasValue?"":"selected=selected")>全部</option>
                            @foreach(var item in accounts)
                            {
                                <option value="@(item.ID)" @(parameter.AccountId.HasValue&&parameter.AccountId.Value==item.ID?"selected=selected":"")>@(item.Name)</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">购买人：</label>
                        <select class="form-control" name="BuyerId">
                            <option value="" @(parameter.BuyerId.HasValue?"":"selected=selected")>全部</option>
                            @foreach(var item in users)
                            {
                                <option value="@(item.ID)" @(parameter.BuyerId.HasValue&&parameter.BuyerId.Value==item.ID?"selected=selected":"")>@(item.Name)</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>查询</button>
                        <button type="button" class="btn btn-white" onclick="history.back()"><i class="fa fa-arrow-left"></i>返回</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-xs-9 animated fadeInRight">
        <div class="ibox">
            <div class="ibox-content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>序列号</th>
                            <th>类型</th>
                            <th>购买人</th>
                            <th>购买时间</th>
                            <th>开发者账号</th>
                            <th>状态</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list)
                        {
                            <tr>
                                <td>
                                    <a href="/Tablets/Tablet/Detail?id=@(item.ID)">@(item.Title)</a>
                                </td>
                                <td>
                                    @(item.SerialNumber)
                                </td>
                                <td>@(item.Type.Title)</td>
                                <td>@(item.Buyer!=null?item.Buyer.Name:"不详")</td>
                                <td>@(item.BuyTime.HasValue ? item.BuyTime.Value.ToString("yyyy-MM-dd") : "不详")</td>
                                <td>@(item.Account != null ? item.Account.Name : "不详")</td>
                                <td>
                                    @if (item.CanUse)
                                    {
                                        <label class="label label-primary">闲置</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">使用</label>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @{
                    Html.RenderPartial("_pagination", parameter.Page as object);
                }
            </div>
        </div>
    </div>
</div>

