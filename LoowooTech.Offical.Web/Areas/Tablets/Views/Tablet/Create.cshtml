@{ 
    Layout = null;
    Tablet tablet = ViewBag.Model;
  
    List<TabletType> types = ViewBag.Types;
    List<Account> accounts = ViewBag.Accounts;
    List<User> users = ViewBag.Users;
}

<script>
    $(function () {
        $(".i-checks").iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });

        $('.chosen-select').chosen({ width: "100%" });

        $(".datetime").datepicker({
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true
        });

        $("#form-tablet").submit(function () {
            LWSubmit("#form-tablet");
            return false;
        });

    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">平板信息</h4>
</div>
<form class="form-horizontal" action="/Tablets/Tablet/Save" method="post" Url="/Tablets/Tablet/Index" id="form-tablet" >
    <div class="modal-body">
        <input type="hidden" name="ID" value="@(tablet!=null?tablet.ID:0)" />
        <input type="hidden" name="UserId" value="@(tablet!=null?tablet.UserId: Identity.UserId)" />
        <div class="form-group">
            <label class="control-label col-xs-3">序列号：</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" placeholder="序列号" name="SerialNumber" value="@(tablet!=null?tablet.SerialNumber:"")" required />
            </div>
        </div>
       
       
      
        <div class="form-group">
            <label class="control-label col-xs-3">平板类型：</label>
            <div class="col-xs-9">
                <select name="TypeId" class="form-control">
         
                    @foreach (var type in types)
                    {
                        <option value="@(type.ID)" @(tablet!=null&&tablet.TypeId==type.ID?"selected=selected":"")>@(type.Title)</option>
                    }
                </select>
    
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">开发者账号：</label>
            <div class="col-xs-9">
                <select name="AccountId" class="form-control">
                    <option value="" @(tablet!=null&&tablet.AccountId.HasValue?"":"selected=selected")>不详</option>
                    @foreach(var item in accounts)
                    {
                        <option value="@(item.ID)" @(tablet!=null&&tablet.AccountId.HasValue&&tablet.AccountId.Value==item.ID?"selected=selected":"")>@(item.Name)</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">购买人：</label>
            <div class="col-xs-9">
                <select name="BuyerId" class="form-control">
                    <option value="" @(tablet!=null&&tablet.BuyerId.HasValue?"":"selected=selected")>不详</option>
                    @foreach(var user in users)
                    {
                        <option value="@(user.ID)" @(tablet!=null&&tablet.BuyerId.HasValue&&tablet.BuyerId.Value==user.ID?"selected=selected":"")>@(user.Name)</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">购买时间：</label>
            <div class="col-xs-9">
                <input type="text" class="form-control datetime" name="BuyTime" readonly value="@(tablet!=null&&tablet.BuyTime.HasValue?tablet.BuyTime.Value.ToString("MM/dd/yyyy"): DateTime.Now.ToString("MM/dd/yyyy"))" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">授权码：</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" name="Code" placeholder="授权码" />
                <span class="help-block m-b-none text-navy">授权码已生成，请输入</span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">备注：</label>
            <div class="col-xs-9">
                <textarea class="form-control" rows="3" name="Remark">@(tablet!=null?tablet.Remark:"")</textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i> 取消</button>
    </div>
</form>
