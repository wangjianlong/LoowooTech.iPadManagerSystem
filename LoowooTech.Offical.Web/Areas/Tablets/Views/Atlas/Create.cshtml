@{ 
    Layout = null;

}
<script>
    $(function () {
        $(".datetime").datepicker({
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true
        });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">程序版本</h4>
</div>

<form class="form-horizontal" method="post" action="/Tablets/Atlas/Save" enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" name="AccountId" value="@(Request.QueryString["accountId"])" />
        <input type="hidden" name="UserId" value="@(Identity.UserId)" />
        <input type="hidden" name="AccountName" value="@(ViewBag.Account.Name)" />
        <div class="form-group">
            <label class="control-label col-xs-3">版本号：</label>
            <div class="col-xs-9">
                <input type="text" name="Number" class="form-control" placeholder="版本号" />
            </div>
        </div>
       <div class="form-group">
           <label class="control-label col-xs-3">程序名称：</label>
           <div class="col-xs-9">
               <input type="text" name="Name" class="form-control" placeholder="程序名称"  value="Atlas"/>
           </div>
       </div>
        <div class="form-group">
            <label class="control-label col-xs-3">发布时间：</label>
            <div class="col-xs-9">
                <input type="text" name="PublishTime" class="form-control datetime" readonly value="@(DateTime.Now.ToString("MM/dd/yyyy"))" />
            </div>
        </div>
       @{ 
           Html.RenderPartial("FormGroupFile");
       }
        <div class="form-group">
            <label class="control-label col-xs-3">备注：</label>
            <div class="col-xs-9">
                <textarea class="form-control" rows="3" name="Remark"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i> 取消</button>
    </div>
</form>
