
@{
    ViewBag.Title = "使用登记";
    Layout = "~/Areas/Tablets/Views/Shared/_Layout.cshtml";
    RecordParameter parameter = ViewBag.Parameter;
    List<Record> list = ViewBag.List;
    List<Project> projects = ViewBag.Projects;
    List<City> cities = ViewBag.Citys;
    if (parameter.CityId.HasValue)
    {
        ViewBag.CityIds = new int[] { parameter.CityId.Value };
    }

}



<script src="~/scripts/LW/Tablets.js"></script>

<div class="row">
    <div class="col-xs-3">
        <div class="ibox float-e-margins">
            <div class="ibox-content mailbox-content">
                <h2>查询设置</h2>
                <form method="get" action="">
                    <div class="form-group">
                        <label class="control-label">项目</label>
                        <select name="ProjectId" class="form-control chosen-select">
                            <option value="" @(parameter.ProjectId.HasValue?"":"selected=selected")>全部</option>
                            @foreach(var item in projects)
                            {
                                <option value="@(item.ID)" @(parameter.ProjectId.HasValue&&parameter.ProjectId.Value==item.ID?"selected=selected":"")>@(item.Name)</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">地区</label>
                        <select class="form-control chosen-select" name="CityId">
                            <option value="" @(parameter.CityId.HasValue?"":"selected=selected")>全部</option>
                            @foreach(var item in cities)
                            {
                                <option value="@(item.ID)" @(parameter.CityId.HasValue&&parameter.CityId.Value==item.ID?"selected=selected":"")>@(item.Name)</option>
                                if (item.Children != null)
                                {
                                    item.ParentName = item.Name;
                                    Html.RenderPartial("SelectCity", item as object);
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>查询</button>
                        <button type="button" class="btn btn-white" onclick="history.back()"><i class="fa fa-arrow-left"></i>返回</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-xs-9 animated fadeInRight">
        <div class="ibox">
            <div class="ibox-content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>项目名称</th>
                            <th>地区</th>
                            <th>用途/说明</th>
                            <th>领取时间</th>
                            <th>领取人</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in list)
                        {
                            <tr>
                                <td>
                                    <a href="/Tablets/Record/Detail?id=@(item.ID)">@(item.Title)</a> 
                                </td>
                                <td>@(item.Project.Name)</td>
                                <td>@(item.City.LongName)</td>
                                <td>@(item.Purpose)</td>
                                <td>@(item.UseTime.ToString("yyyy-MM-dd"))</td>
                                <td>@(item.UseName)</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @{
                    Html.RenderPartial("_pagination", parameter.Page as object);
                }
            </div>
        </div>
    </div>
</div>