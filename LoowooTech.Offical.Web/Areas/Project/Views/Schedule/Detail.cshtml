@{ 
    Layout = null;
    List<WorkSchedule> list = ViewBag.List;
    int projectId = ViewBag.ProjectId;
    int serial = 1;
}


<div class="form-group">
    <a href="/Project/Schedule/Create?projectId=@(projectId)" class="btn btn-primary" data-toggle="modal" data-target="#Modal"><i class="fa fa-plus"></i>录入工作记录</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>序号</th>
            <th>时间</th>
            <th>用户</th>
            <th>内容</th>
            <th>附件</th>
            <td>操作</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in list)
        {
            <tr>
                <td>@(serial++)</td>
                <td>@(item.Time.ToLongDateString()+" "+item.Time.ToLongTimeString())</td>
                <td>@(item.User.Name)</td>
                <td>
                    <p class="small">
                        @(item.Content)
                    </p>
                </td>
                <td>
                    
                </td>
                <td>
                    @if (Identity.UserRole >= UserRole.Advance || Identity.UserId == item.UserId)
                    {
                        <a href="/Project/Schedule/Delete?id=@(item.ID)" class="btn btn-danger btn-xs" name="Delete" Url="/Project/Home/Detail?id=@(projectId)"><i class="fa fa-remove"></i>删除</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
