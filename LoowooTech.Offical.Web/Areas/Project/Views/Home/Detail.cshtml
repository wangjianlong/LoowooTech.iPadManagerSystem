
@{
    ViewBag.Title = "项目查看";
    Layout = "~/Areas/Project/Views/Shared/_Layout.cshtml";
    Project project = ViewBag.Project;
}

@section Description{
    项目详细信息
    }

@section buttonHead{
<div class="title-action">

    <a href="" class="btn btn-success"><i class="fa fa-edit"></i>编辑</a>
    <a href="" class="btn btn-danger"><i class="fa fa-remove"></i>删除</a>
    <a href="" class="btn btn-primary" data-toggle="modal" data-target="#Modal"><i class="fa fa-plus"></i>工作进度</a>
    <a href="" class="btn btn-warning" data-toggle="modal" data-target="#Modal"><i class="fa fa-plus-circle"></i>发票信息</a>
    <a href="" class="btn btn-success" data-toggle="modal" data-target="#Modal"><i class="fa fa-file"></i>上传合同</a>
    <button type="button" class="btn btn-default" onclick="history.back()"><i class="fa fa-arrow-left"></i>返回</button>
</div>
    }

<div class="row">
    <div class="col-xs-9">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="m-t-md">
                                    <h2>@(project.Name)</h2>
                                </div>
                                <dl class="dl-horizontal">
                                    <dt>状态:</dt>
                                    <dd>

                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <dl class="dl-horizontal">
                                    <dt>项目编号：</dt>
                                    <dd>@(project.Serial)</dd>
                                    <dt>创建时间：</dt>
                                    <dd>@(project.CreateTime.ToLongDateString())</dd>
                                    <dt>创建人：</dt>
                                    <dd>@(project.User.Name)</dd>
                                    <dt>项目参与人员：</dt>
                                    <dd class="project-people">

                                    </dd>
                                    <dt>甲方：</dt>
                                    <dd></dd>
                                    <dt>合同金额【元】：</dt>
                                    <dd></dd>
                                </dl>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="panel blank-panel">
                                    <div class="panel-heading">
                                        <div class="panel-options">
                                            <ul class="nav nav-tabs">
                                                <li class=""><a href="" data-toggle="tab">项目进度</a></li>
                                                <li class=""><a href="" data-toggle="tab">开票信息</a></li>
                                                <li class=""><a href="" data-toggle="tab">合同信息</a></li>
                                                <li class=""><a href="" data-toggle="tab">相关报销</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="tab-content">
                                            <div class="tab-pane" id="">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


