@{
    Layout = null;
    List<Contract> contracts = ViewBag.List;
    int projectId = ViewBag.ProjectId;
}



<link rel="stylesheet" href="~/Content/css/plugins/footable/footable.core.css" />

<script src="~/scripts/plugins/footable/footable.all.min.js"></script>

<script>
    $(document).ready(function () {

        $('.footable').footable();

    });

</script>


<table class="table toggle-arrow-tiny footable">
    <thead>
        <tr>
            <th data-toggle="true">合同名称</th>
            <th>甲方</th>
            <th>乙方</th>
            <th>金额【元】</th>
            <th data-hide="all">付款信息</th>
            <th data-hide="all">合同扫描件</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contract in contracts)
        {
            <tr>
                <td>@(contract.Name)</td>
                <td>@(contract.CompanyA.Name)</td>
                <td>@(contract.CompanyB.Name)</td>
                <td>@(contract.Money)</td>
                <td>
                    @if (contract.PayInfos != null)
                    {
                        <table class="table">
                            @foreach (var pay in contract.PayInfos)
                            {
                                <tr>
                                    <td>@(pay.Content)</td>
                                    <td>@(pay.Money)</td>
                                </tr>
                            }
                        </table>
                    }
                </td>
                <td>
                    @if (contract.ContractFiles != null)
                    {
                        <table class="table">
                            @foreach(var file in contract.ContractFiles)
                            {
                                <tr>
                                    <td>@(file.Remark)</td>
                                    <td>
                                        <a href="/@(file.FileInfo.Path)">@(file.FileInfo.FileName)</a>
                                    </td>

                                </tr>
                            }
                        </table>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



