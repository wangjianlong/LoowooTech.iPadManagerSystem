@{ 
    Layout = null;
    Project project = ViewBag.Project;
    
    List<Contract> contracts = ViewBag.Contracts;
}

<script>
    $(function(){
     $('.chosen-select').chosen({ width: "100%" });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">录入发票信息</h4>
</div>


<form class="form-horizontal" method="post" id="form-invoice" action="/Project/Invoice/Save">
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label col-xs-3">项目名称：</label>
            <div class="col-xs-9">
                <input type="text" name="" class="form-control" value="@(project.Name)" />
                <input type="hidden" name="UserId" value="@(Identity.UserId)" />
                <input type="hidden" name="ProjectId" value="@(project.ID)" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">发票代码：</label>
            <div class="col-xs-9">
        
                <input type="text" class="form-control" placeholder="发票代码" name="Code" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">发票金额【元】：</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" placeholder="发票金额" name="Money" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">关联合同：</label>
            <div class="col-xs-9">
                <select name="ContractId" class="chosen-select form-control">
                    <option value="">请选择合同</option>
                    @foreach(var item in contracts)
                    {
                        <option value="@(item.ID)">@(item.Name)</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">扫描件：</label>
            <div class="col-xs-9">
                <input type="file" class="form-control" name="file" />
               
            </div>
         </div>
        <div class="form-group">
            <label class="control-label col-xs-3">备注：</label>
            <div class="col-xs-9">
                <textarea class="form-control" rows="3" name="Remark"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>保存</button>
        <button type="button" class="btn btn-white" data-dismiss="modal"><i class="fa fa-remove"></i>取消</button>
    </div>
</form>