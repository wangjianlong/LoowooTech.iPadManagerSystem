@model List<LWSystem>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-xs-4 col-sm-4 col-md-4">
            <div class="widget-head-color-box p-lg text-center @(item.WidgetClass)">
                <div class="m-b-md">
                    <h2 class="font-bold no-margins">
                        @(item.Name)
                    </h2>
                </div>
                <i class="@(item.iConClass) fa-4x"></i>
            </div>
            <div class="widget-text-box">
                <h4 class="media-heading">说明</h4>
                <p>@(item.Description)</p>
                <div class="text-right">
                    <a href="" class="btn btn-xs btn-primary" name="Good"><i class="fa fa-thumbs-up"></i>点赞</a>
                    @if (Identity.UserRole == UserRole.Admin)
                    {
                        if (item.IsOnline == false)
                        {
                            <a href="" class="btn btn-xs btn-warning"><i class="fa"></i>上线</a>
                        }
                        else
                        {
                            <a href="" class="btn btn-xs btn-danger"><i class="fa fa-opera"></i>暂停</a>
                        }
                        <a href="/Admin/LWSystem/Create?id=@(item.ID)" class="btn btn-xs btn-success" data-toggle="modal" data-target="#Modal"><i class="fa fa-edit"></i>编辑</a>
                        <a href="/Admin/LWSystem/Delete?id=@(item.ID)" class="btn btn-xs btn-danger" name="Delete" Url="/Admin/LWSystem/Index"><i class="fa fa-times"></i>删除</a>
                    }

                    <a href="@(item.Address)" class="btn btn-xs btn-white"><i class="fa fa-arrow-circle-right"></i>进入</a>
                </div>
            </div>
        </div>
    }

</div>